	"documentnotes": {
		"note": [
			{
				"text": "\n            An insufficient control of network message volume (CWE-406) vulnerability in FortiAnalyzer may allow an unauthenticated remote attacker to perform NTP amplification attacks (thereby causing reflected denial of service on arbitrary targets) via sending specially crafted mode 6 queries to the FortiAnalyzer built-in NTP server.\n        ",
				"title": "Summary",
				"type": "Summary",
				"ordinal": "1"
			},
			{
				"text": "\n            Denial of service\n        ",
				"title": "Impact",
				"type": "General",
				"ordinal": "2"
			},
			{
				"text": "\n            FortiAnalyzer 6.4.0, 6.2.3 and below (*)* only models that support FortiRecorder management are impacted:FAZ_200FFAZ_300FFAZ_400EFAZ_800F.FAZ_1000EFAZ_1000FFAZ_2000EFAZ_3000FFAZ_3500GFAZ_3700FFAZ_VM64FAZ_VM64_KVM\n        ",
				"title": "Affected Products",
				"type": "General",
				"ordinal": "3"
			},
			{
				"text": "\n            Upgrade to FortiAnalyzer 6.2.4 or 6.4.1\n        ",
				"title": "Solutions",
				"type": "General",
				"ordinal": "4"
			}
		]
	},
