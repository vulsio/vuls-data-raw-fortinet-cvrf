	"documentnotes": {
		"note": [
			{
				"text": "\n            A missing cryptographic step in FortiMail IBE may allow an unauthenticated attacker who intercepts the encrypted messages to manipulate them in such a way that makes the tampering and the recovery of the plaintexts possible.\n        ",
				"title": "Summary",
				"type": "Summary",
				"ordinal": "1"
			},
			{
				"text": "\n            FortiMail version 6.4.4 and below. FortiMail version 6.2.6 and below.\n        ",
				"title": "Affected Products",
				"type": "General",
				"ordinal": "2"
			},
			{
				"text": "\n            Please upgrade to FortiMail version 7.0.0 or above\n        ",
				"title": "Solutions",
				"type": "General",
				"ordinal": "3"
			}
		]
	},
